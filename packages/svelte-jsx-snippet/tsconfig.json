{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext", "dom"],
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedDeclarations": true,
    "verbatimModuleSyntax": true
  },
  "exclude": ["dist", "vitest.config.ts", "tsup.config.ts"]
}
